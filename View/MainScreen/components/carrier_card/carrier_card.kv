<CarrierCard>:
    spacing: '12dp'
    padding: '12dp'
    MDLabel:
        text: root.number
        font_style: 'Title'
        role: 'large'
        halign: 'center'
        adaptive_width: True

    MDDivider:
        orientation: 'vertical'
    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: root.name
            font_style: 'Title'
            role: 'large'


        MDLabel:
            text: f'Lap: {root.lap_count}'
            font_style: 'Label'
            role: 'large'
