<CarrierCard>:
    size_hint_y: None
    minimum_height: '64dp'
    spacing: '12dp'
    padding: '12dp'
    MDLabel:
        text: root.number
        font_style: 'Title'
        role: 'large'
        halign: 'center'
        adaptive_width: True

    MDDivider:
        orientation: 'vertical'
    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: root.name
            font_style: 'Title'
            role: 'small'


        MDLabel:
            text: root.lap_count
            font_style: 'Label'
            role: 'small'
