<CustomOneLineIconListItem>:
    size_hint_y: None
    height: '48dp'
    MDListItemHeadlineText:
        text: root.text

<RiderSearch>:
    adaptive_height: True
    text: root.rider_on_deck
    mode: 'outlined'


#    MDTextFieldHintText:
#        text: "Rider on Deck"

    MDTextFieldHelperText:
        text: "Rider on Deck"
        mode: 'persistent'

    MDTextFieldLeadingIcon:
        icon: 'magnify'

    MDTextFieldTrailingIcon:
        icon: 'close'
        on_touch_down: root.clear_text()

